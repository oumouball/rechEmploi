{% extends 'base.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
 <div class="container mt-5">  
<div class="row">
   <div class="col-md-12 ">
     <div class="card">
              <div class="card-header bg-dark">
					<h2>Liste des CV enregistrer</h2>
				</div>
    <table class="table table-secondary" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Specialite</th>
                <th>NiveauEtude</th>
                <th>Experienceprofessionnelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>

                <td>{{ cv.id }}</td>
                <td>{{ cv.nom }}</td>
                <td>{{ cv.prenom }}</td>
                <td>{{ cv.age }}</td>
                <td>{{ cv.adresse }}</td>
                <td>{{ cv.email }}</td>
                <td>{{ cv.telephone }}</td>
                <td>{{ cv.specialite }}</td>
                <td>{{ cv.niveauEtude }}</td>
                <td>{{ cv.experienceprofessionnelle }}</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="{{ path('cv_show', {'id': cv.id}) }}">show</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-secondary" href="{{ path('cv_new') }}">Create new</a>
    	
			</div>
		</div>
		</div>
	</div>
{% endblock %}
